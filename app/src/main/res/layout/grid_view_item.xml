<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="game"
            type="com.gavinsappcreations.upcominggames.domain.Game" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!--
        TODO: if we start at 2019-03-30, why is one of the images not aligned?
-->

        <ImageView
            android:id="@+id/game_imageView"
            imageUrl="@{game.imageUrl}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/game_cover"
            android:padding="2dp"
            android:scaleType="fitEnd"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/name_textView"
            android:text="@{game.gameName}"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/release_date_textView"
            android:text="@{game.releaseDate}"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>
